<h1>New Article</h1>
	
	<%= form_for @article do |f|%>
	<p><%= f.label :Title %>
	<%= f.text_field :title %></p>
	<p><%= f.label :Body %>
	<%= f.text_area :body %></p>
	<p><%= f.label :tag_list, "Tags (separated by commas)" %>
	<%= f.text_field :tag_list %></p>
	<%= f.submit%><br/>
	<% end %>
	
	<%= button_to "Back", { :action => "index" }, :method => :get %>